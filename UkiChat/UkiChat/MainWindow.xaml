<mah:MetroWindow x:Class="UkiChat.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
                 xmlns:mvvm="http://prismlibrary.com/"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:extensions="clr-namespace:UkiChat.Extensions"
                 xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                 mc:Ignorable="d"
                 mvvm:ViewModelLocator.AutoWireViewModel="True"
                 Title="UkiChat v0.1" Height="450" Width="800" TitleCharacterCasing="Normal"
                 Background="Black">
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands ShowSeparators="False">
            <Button ToolTip="{extensions:Loc Key=profile.title }"
                    Command="{Binding DataContext.OpenProfileWindowCommand, RelativeSource={RelativeSource AncestorType=mah:MetroWindow}}">
                <iconPacks:PackIconMaterial Kind="Account" Width="20" Height="20" />
            </Button>
            <Button ToolTip="{extensions:Loc Key=settings.title }"
                    Command="{Binding DataContext.OpenSettingsWindowCommand, RelativeSource={RelativeSource AncestorType=mah:MetroWindow}}">
                <iconPacks:PackIconMaterial Kind="Cog" Width="20" Height="20" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <Grid Visibility="{Binding Visibility}" >
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <wpf:WebView2 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="{Binding WebSource}" />
    </Grid>
</mah:MetroWindow>