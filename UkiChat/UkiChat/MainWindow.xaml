<mah:MetroWindow x:Class="UkiChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:mvvm="http://prismlibrary.com/"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:extensions="clr-namespace:UkiChat.Extensions"
        mc:Ignorable="d"
        mvvm:ViewModelLocator.AutoWireViewModel="True"
        Title="UkiChat v0.1" Height="450" Width="800" TitleCharacterCasing="Normal">
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands ShowSeparators="False">
            <Button ToolTip="{extensions:Loc Key=Settings.Title }"
                    Command="{Binding DataContext.OpenSettingsCommand, RelativeSource={RelativeSource AncestorType=mah:MetroWindow}}">
                <iconPacks:PackIconMaterial Kind="Cog" Width="20" Height="20"/>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <Grid>
        <wpf:WebView2 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="http://localhost:5000" />
    </Grid>
</mah:MetroWindow>